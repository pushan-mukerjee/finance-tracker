<h1><%= link_to 'My Portfolio', my_portfolio_path %></h1>
<div class='search-area'
  <h2>Search Stocks</h2>
  <%= form_tag search_stock_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
           <%= fa_icon 'search 2x' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div id="results">

</div>

<% if !@tracked_stocks.empty? %>
  <p>Hit F5 or Click 'My Portfolio' to refresh the page and update stock prices</p>
  <%= render 'stocks/list' %>
<% else %>
  <p>There are currently no stocks listed for this user</p>
<% end %>
